<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   
    <Button
        android:id="@+id/btnzweiterFragebogen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnersterFragebogen"
        android:layout_marginTop="83dp"
        android:onClick="zweiterFragebogen"
        android:text="Fragebogen 2"
        android:textColor="#848484"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btnersterFragebogen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:onClick="ersterFragebogen"
        android:text="Fragebogen 1"
        android:textColor="#848484"
        android:typeface="monospace" />
    
</RelativeLayout>